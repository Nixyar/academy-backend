PORT=3000
WEB_ORIGIN=http://localhost:5173,https://vibecoderai.ru,https://www.vibecoderai.ru
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_JWT_SECRET=your-jwt-secret
COOKIE_SECURE=false
NODE_ENV=development

# LLM gateway/proxy (preferred)
# Example:
# LLM_API_URL=https://gateway-vibecoderai.ru/v1/llm/generate
# LLM_GATEWAY_TOKEN=...
LLM_API_URL=
LLM_GATEWAY_TOKEN=

# Direct Gemini (fallback when gateway not configured)
GEMINI_API_KEY=
GEMINI_MODEL=
GEMINI_API_BASE_URL=

# TBank (EACQ) acquiring
# See docs: https://developer.tbank.ru/eacq/intro
TBANK_TERMINAL_KEY=
TBANK_PASSWORD=
TBANK_API_URL=
TBANK_SUCCESS_URL=
TBANK_FAIL_URL=
TBANK_NOTIFICATION_URL=

# Background reconciliation (when webhook/redirect missed)
TBANK_RECONCILE_INTERVAL_MS=120000
TBANK_RECONCILE_LOOKBACK_HOURS=168
TBANK_RECONCILE_BATCH_SIZE=50

# Receipt (fiscal check). When enabled, `Receipt` will be sent to TBank /Init.
# TBANK_SEND_RECEIPT=true enables receipts; any falsy value disables.
TBANK_SEND_RECEIPT=false
# Required when TBANK_SEND_RECEIPT=true
TBANK_RECEIPT_TAXATION=
TBANK_RECEIPT_TAX=
# Optional (defaults used if empty)
TBANK_RECEIPT_PAYMENT_METHOD=
TBANK_RECEIPT_PAYMENT_OBJECT=

# Public API URL (used to build webhook callback URLs when behind a proxy)
PUBLIC_API_URL=
